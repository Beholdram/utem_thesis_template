@article{Dodaro1997,
abstract = {Business process reengineering (BPR) began as a private sector technique to help$\backslash$norganizations fundamentally rethink how they do their work in order to dramatically$\backslash$nimprove customer service, cut operational costs, and become world-class competitors. A$\backslash$nkey stimulus for reengineering has been the continuing development and deployment of$\backslash$nsophisticated information systems and networks. Leading organizations are becoming$\backslash$nbolder in using this technology to support innovative business processes, rather than$\backslash$nrefining current ways of doing work. Not surprisingly, BPR has captured the interest of$\backslash$nfederal agencies, which are faced with an urgent need to reduce costs and improve$\backslash$nservice to the American public.1 This guide is designed to help auditors review business$\backslash$nprocess reengineering projects in a federal setting, determine the soundness of these$\backslash$nefforts, and identify actions needed to improve the prospects for their success.$\backslash$nThe nine major assessment issues in this guide deal with elements considered by experts$\backslash$nto be stepping stones to successful business process reengineering. These issues cover a$\backslash$nwide range of activities, such as identifying customer needs and performance problems,$\backslash$nreassessing strategic goals, defining reengineering opportunities, managing reengineering$\backslash$nprojects, controlling risks and maximizing benefits, managing organizational changes, and$\backslash$nsuccessfully implementing new processes. Taken together, the issues in this guide$\backslash$nprovide a general framework for assessing a reengineering project, from initial strategic$\backslash$nplanning and goal-setting to post-implementation assessments.},
author = {Dodaro, Gene and Crowley, Brian},
file = {:Users/crecabar/Documents/Mendeley Desktop/Dodaro, Crowley - 1997 - Business Process Reengineering Assessment Guide.pdf:pdf},
